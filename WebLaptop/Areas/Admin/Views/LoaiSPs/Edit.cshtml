@model WebLaptop.Models.LoaiSP

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="pd-ltr-20 xs-pd-20-10">
    <div class="min-height-200px">
        <div class="page-header">
            <div class="row">
                <div class="col-md-6 col-sm-12">
                    <div class="title">
                        <h4>Sửa loại sản phẩm</h4>
                    </div>
                    <nav aria-label="breadcrumb" role="navigation">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="@Url.Action("Index","Default")">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Sửa loại sản phẩm</li>
                        </ol>
                    </nav>
                </div>
               
            </div>
        </div>
        <!-- Default Basic Forms Start -->
        <div class="pd-20 card-box mb-30">
            <div class="clearfix">
                <div class="pull-left">
                    <h4 class="text-blue h4">Sửa loại sản phẩm</h4>
                </div>
                <div class="pull-right">
                    <a href="#basic-form1" class="btn btn-primary btn-sm scroll-click" rel="content-y" data-toggle="collapse" role="button"></a>
                </div>
            </div>
            <form method="post">
                @Html.HiddenFor(model => model.Ma)
                <div class="form-group row">
                    <label class="col-sm-12 col-md-2 col-form-label">Loại sản phẩm</label>
                    <div class="col-sm-12 col-md-10">
                        <input class="form-control" type="text" placeholder="" name="Ten" value="@Model.Ten"  required>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-12 col-md-2 col-form-label">Mô tả</label>
                    <div class="col-sm-12 col-md-10">
                        <input class="form-control" placeholder="" type="search" name="MoTa" value="@Model.MoTa" required>
                    </div>
                </div>
                <div class="btn-list">
                    <button type="submit" class="btn btn-success btn-lg btn-block">Sửa</button>
                    <a href="@Url.Action("Index","LoaiSPs")" class="btn btn-secondary btn-lg btn-block">Quay lại</a>
                </div>
            </form>
        </div>
    </div>
</div>

