@model IEnumerable<WebLaptop.Models.NguoiDung>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="pd-ltr-20 xs-pd-20-10">
    <div class="min-height-200px">
        <div class="page-header">
            <div class="row">
                <div class="col-md-6 col-sm-12">
                    <div class="title">
                        <h4>Danh sách người dùng</h4>
                    </div>
                    <nav aria-label="breadcrumb" role="navigation">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="@Url.Action("Index","Default")">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Danh sách người dùng</li>
                        </ol>
                    </nav>
                </div>
                
            </div>
        </div>
        <!-- Simple Datatable start -->
        <div class="card-box mb-30">
            <div class="pd-20">
                <h4 class="text-blue h4">Danh sách người dùng</h4>
                <p class="mb-0">Thêm người dùng<a class="text-primary" href="@Url.Action("Create","NguoiDungs")">Click Here</a></p>
            </div>
            <div class="pb-20">
                <table class="data-table table stripe hover nowrap">
                    <thead>
                        <tr>
                            <th class="table-plus datatable-nosort">Tên</th>
                            <th>Giới tính</th>
                            <th>Địa chỉ</th>
                            <th>Điện thoại</th>
                            <th>Ảnh</th>
                            <th>Email</th>
                            <th>Quyền</th>
                            <th class="datatable-nosort">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td class="table-plus">@item.Ten</td>
                            <td>@item.GioiTinh</td>
                            <td>@item.DiaChi</td>
                            <td>@item.DienThoai</td>
                            <td><img src="@item.Anh" height="50px" width="50px" /></td>
                            <td>@item.Email</td>
                            <td>@item.Quyen</td>
                            <td>
                                <div class="dropdown">
                                    <a class="btn btn-link font-24 p-0 line-height-1 no-arrow dropdown-toggle" href="#" role="button" data-toggle="dropdown">
                                        <i class="dw dw-more"></i>
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-right dropdown-menu-icon-list">
                                        <a class="dropdown-item" href="@Url.Action("Details","NguoiDungs", new { id = item.Ma })"><i class="dw dw-eye"></i> View</a>
                                        <a class="dropdown-item" href="@Url.Action("Edit","NguoiDungs", new { id = item.Ma })"><i class="dw dw-edit2"></i> Edit</a>
                                        <a class="dropdown-item" href="@Url.Action("DeleteConfirmed","NguoiDungs", new { id = item.Ma })"><i class="dw dw-delete-3"></i> Delete</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
