@model WebLaptop.Models.NguoiDung

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="pd-ltr-20 xs-pd-20-10">
    <div class="min-height-200px">
        <div class="page-header">
            <div class="row">
                <div class="col-md-6 col-sm-12">
                    <div class="title">
                        <h4>Cập nhật người dùng</h4>
                    </div>
                    <nav aria-label="breadcrumb" role="navigation">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="@Url.Action("Index","Default")">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Cập nhật người dùng</li>
                        </ol>
                    </nav>
                </div>
                
            </div>
        </div>
        <!-- Default Basic Forms Start -->
        <div class="pd-20 card-box mb-30">
            <div class="clearfix">
                <div class="pull-left">
                    <h4 class="text-blue h4">Sửa người dùng</h4>
                    <p class="mb-30">All bootstrap element classies</p>
                </div>
                <div class="pull-right">
                    <a href="#basic-form1" class="btn btn-primary btn-sm scroll-click" rel="content-y" data-toggle="collapse" role="button"></a>
                </div>
            </div>
            <form method="post">
                @Html.HiddenFor(model => model.Ma)
                <div class="form-group row">
                    <label class="col-sm-12 col-md-2 col-form-label">Tên người dùng</label>
                    <div class="col-sm-12 col-md-10">
                        <input class="form-control" type="text" placeholder="" name="Ten" value="@Model.Ten" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-12 col-md-2 col-form-label">Giới tính</label>
                    <div class="col-sm-12 col-md-10">
                        <select class="custom-select" name="GioiTinh">
                            @if (Model.GioiTinh == "nu")
                            {
                                <option value="nu">Nữ</option>
                            }

                            else
                            {
                              <option value="nam">Nam</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-12 col-md-2 col-form-label">Địa chỉ</label>
                    <div class="col-sm-12 col-md-10">
                        <input class="form-control" type="text" placeholder="" value="@Model.DiaChi" name="DiaChi" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-12 col-md-2 col-form-label">Số điện thoại</label>
                    <div class="col-sm-12 col-md-10">
                        <input class="form-control" type="text" placeholder="" value="@Model.DienThoai" name="DienThoai" required>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-12 col-md-2 col-form-label">Email</label>
                    <div class="col-sm-12 col-md-10">
                        <input class="form-control" placeholder="" type="search" value="@Model.Email" name="Email" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-12 col-md-2 col-form-label">Tên đăng nhập</label>
                    <div class="col-sm-12 col-md-10">
                        <input class="form-control" placeholder="" type="search" value="@Model.TenDangNhap" name="TenDangNhap" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-12 col-md-2 col-form-label">Mật khẩu</label>
                    <div class="col-sm-12 col-md-10">
                        <input class="form-control" placeholder="" type="search" value="@Model.MatKhau" name="MatKhau" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-12 col-md-2 col-form-label">Ảnh</label>
                    <div class="col-sm-12 col-md-10 d-flex">
                        <input class="form-control" placeholder="" type="text" name="Anh" value="@Model.Anh" required id="Anh">
                        <input type="button" class="btn btn-success" id="upload-image" value="Upload-image"  required>
                        <script>
                            $("#upload-image").click(function () {
                                    var finder = new CKFinder();
                                    finder.selectActionFunction = function (fileUrl) {
                                    $("#Anh").val(fileUrl);
                                    }
                                    finder.popup();
                                });
                        </script>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-12 col-md-2 col-form-label">Quyền</label>
                    <div class="col-sm-12 col-md-10">
                        <select class="custom-select" name="Quyen">
                            <option value="admin">Admin</option>
                            <option value="editor">Editor</option>
                            <option value="employee">Employee</option>
                        </select>
                    </div>
                </div>
                <div class="btn-list">
                    <button type="submit" class="btn btn-success btn-lg btn-block">Sửa</button>
                    <a href="@Url.Action("Index","SanPhams")" class="btn btn-secondary btn-lg btn-block">Quay lại</a>
                </div>
            </form>
        </div>
    </div>
</div>
