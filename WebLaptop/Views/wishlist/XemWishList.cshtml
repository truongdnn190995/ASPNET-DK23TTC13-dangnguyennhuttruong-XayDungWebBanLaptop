@model IEnumerable<WebLaptop.Models.wishlist>
@using WebLaptop.Models;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="ht__bradcaump__area bg-image--5" style="background-image:url('https://truonggiang.vn/wp-content/uploads/2022/09/banner-laptop-sinh-vien-2048x943-1.jpg')">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="bradcaump__inner text-center">
                    <h2 class="bradcaump-title">Danh sách yêu thích</h2>
                    <nav class="bradcaump-content">
                        <a class="breadcrumb_item" href="index.html">Trang chủ</a>
                        <span class="brd-separetor">/</span>
                        <span class="breadcrumb_item active">Danh sách yêu thích</span>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Bradcaump area -->
<!-- cart-main-area start -->
<div class="wishlist-area section-padding--lg bg__white">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="wishlist-content">
                    <form action="#">
                        <div class="wishlist-table wnro__table table-responsive">
                            <table>
                                <thead>
                                    <tr>
                                        <th class="product-remove"></th>
                                        <th class="product-thumbnail"></th>
                                        <th class="product-name"><span class="nobr">Tên sản phẩm</span></th>
                                        <th class="product-price"><span class="nobr"> Giá</span></th>
                                        <th class="product-stock-stauts"><span class="nobr"> Trạng thái </span></th>
                                        <th class="product-add-to-cart"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="product-remove"><a href="@Url.Action("XoaSP","wishlist" , new { masp = item.sp.Ma })">×</a></td>
                                            <td class="product-thumbnail"><a href="@Url.Action("SingleProduct","SinglePage" , new { ma = item.sp.Ma })"><img src="@item.sp.Anh" alt="" width="80px" height="100px"></a></td>
                                            <td class="product-name"><a href="@Url.Action("SingleProduct","SinglePage" , new { ma = item.sp.Ma })">@item.sp.Ten</a></td>
                                            @{ decimal gia = (decimal)item.sp.Gia;}
                                            <td class="product-price"><span class="amount">@gia.ToString("##,#")</span></td>
                                            <td class="product-stock-status"><span class="wishlist-in-stock">Còn hàng</span></td>
                                            <td class="product-add-to-cart"><a href="@Url.Action("ThemGioHang","GioHangs" , new { masp = item.sp.Ma , sl = 1})"> Add to Cart</a></td>
                                        </tr>


                                    }
                                </tbody>
                            </table>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>