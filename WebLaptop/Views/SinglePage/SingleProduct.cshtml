
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="ht__bradcaump__area bg-image--4"  style="background-image:url('https://truonggiang.vn/wp-content/uploads/2022/09/banner-laptop-sinh-vien-2048x943-1.jpg')">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="bradcaump__inner text-center">
                    <h2 class="bradcaump-title">Chi tiết sản phẩm</h2>
                    <nav class="bradcaump-content">
                        <a class="breadcrumb_item" href="@Url.Action("Index","Home")">Home</a>
                        <span class="brd-separetor">/</span>
                        <span class="breadcrumb_item active">Chi tiết sản phẩm</span>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Bradcaump area -->
<!-- Start main Content -->
<div class="maincontent bg--white pt--80 pb--55">
    <div class="container">
        <div class="row">
            <div class="col-lg-9 col-12">
                <div class="wn__single__product">
                    <div class="row">
                        <div class="col-lg-6 col-12">
                            <div class="wn__fotorama__wrapper">
                                <div class="fotorama wn__fotorama__action" data-nav="thumbs">
                                    <a href="1.jpg"><img src="@ViewBag.sanpham.Anh" alt=""></a>
                                    <a href="2.jpg"><img src="@ViewBag.sanpham.Anh" alt=""></a>
                                    <a href="3.jpg"><img src="@ViewBag.sanpham.Anh" alt=""></a>
                                    <a href="4.jpg"><img src="@ViewBag.sanpham.Anh" alt=""></a>
                                    <a href="6.jpg"><img src="@ViewBag.sanpham.Anh" alt=""></a>
                                    <a href="7.jpg"><img src="@ViewBag.sanpham.Anh" alt=""></a>
                                    <a href="8.jpg"><img src="@ViewBag.sanpham.Anh" alt=""></a>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-12">
                            <div class="product__info__main">
                                <h1>@ViewBag.sanpham.Ten</h1>
                                <div class="product-reviews-summary d-flex">
                                    <ul class="rating-summary d-flex">
                                        <li><i class="zmdi zmdi-star-outline"></i></li>
                                        <li><i class="zmdi zmdi-star-outline"></i></li>
                                        <li><i class="zmdi zmdi-star-outline"></i></li>
                                        <li class="off"><i class="zmdi zmdi-star-outline"></i></li>
                                        <li class="off"><i class="zmdi zmdi-star-outline"></i></li>
                                    </ul>
                                </div>
                                <div class="price-box">
                                    @{decimal gia = (decimal)ViewBag.sanpham.Gia;}
                                    <span>@gia.ToString("##,#") VND</span>
                                </div>
                                <div class="product__overview">
                                    <p>@ViewBag.sanpham.Mota</p>
                                </div>
                                <div class="box-tocart d-flex">
                                    <div class="addtocart__actions">
                                        <a class="tocart btn" href="@Url.Action("ThemGioHang","GioHangs" , new { masp = ViewBag.sanpham.Ma , sl = 1})" title="Add to Cart">Add to Cart</a>
                                    </div>
                                    <div class="product-addto-links clearfix">
                                        <a class="wishlist" href="@Url.Action("ThemWishList","wishlist" , new { masp = ViewBag.sanpham.Ma})"></a>
                                        <a class="compare" href="@Url.Action("ThemGioHang","GioHangs" , new { masp = ViewBag.sanpham.Ma , sl = 1})"></a>
                                    </div>
                                </div>
                                <div class="product_meta">
                                    <span class="posted_in">
                                         Loại sản phẩm:
                                        <a href="#">@ViewBag.sanpham.LoaiSP.Ten</a>,
                                    </span>
                                </div>
                                <div class="product-share">
                                    <ul>
                                        <li class="categories-title">Chia sẻ :</li>
                                        <li>
                                            <a href="#">
                                                <i class="icon-social-twitter icons"></i>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#">
                                                <i class="icon-social-tumblr icons"></i>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#">
                                                <i class="icon-social-facebook icons"></i>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#">
                                                <i class="icon-social-linkedin icons"></i>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="product__info__detailed">
                    <div class="pro_details_nav nav justify-content-start" role="tablist">
                        <a class="nav-item nav-link active" data-toggle="tab" href="#nav-details" role="tab">Details</a>
                        <a class="nav-item nav-link" data-toggle="tab" href="#nav-review" role="tab">Nhân xét</a>
                    </div>
                    <div class="tab__container">
                        <!-- Start Single Tab Content -->
                        <div class="pro__tab_label tab-pane fade show active" id="nav-details" role="tabpanel">
                            <div class="description__attribute">
                                <p>
                                    @Html.Raw(ViewBag.sanpham.Chitiet)
                                </p>
                            </div>
                        </div>
                        <!-- End Single Tab Content -->
                        <!-- Start Single Tab Content -->
                        <div class="pro__tab_label tab-pane fade" id="nav-review" role="tabpanel">
                            <div class="review__attribute">
                                <h1>Phản hồi khách hàng</h1>
                                <h2>Tuấn Anh</h2>
                                <div class="review__ratings__type d-flex">
                                    <div class="review-ratings">
                                        <div class="rating-summary d-flex">
                                            <span>Cốt truyện</span>
                                            <ul class="rating d-flex">
                                                <li><i class="zmdi zmdi-star"></i></li>
                                                <li><i class="zmdi zmdi-star"></i></li>
                                                <li><i class="zmdi zmdi-star"></i></li>
                                                <li class="off"><i class="zmdi zmdi-star"></i></li>
                                                <li class="off"><i class="zmdi zmdi-star"></i></li>
                                            </ul>
                                        </div>

                                        <div class="rating-summary d-flex">
                                            <span>Giá</span>
                                            <ul class="rating d-flex">
                                                <li><i class="zmdi zmdi-star"></i></li>
                                                <li><i class="zmdi zmdi-star"></i></li>
                                                <li><i class="zmdi zmdi-star"></i></li>
                                                <li class="off"><i class="zmdi zmdi-star"></i></li>
                                                <li class="off"><i class="zmdi zmdi-star"></i></li>
                                            </ul>
                                        </div>
                                        <div class="rating-summary d-flex">
                                            <span>Nội dung</span>
                                            <ul class="rating d-flex">
                                                <li><i class="zmdi zmdi-star"></i></li>
                                                <li><i class="zmdi zmdi-star"></i></li>
                                                <li><i class="zmdi zmdi-star"></i></li>
                                                <li class="off"><i class="zmdi zmdi-star"></i></li>
                                                <li class="off"><i class="zmdi zmdi-star"></i></li>
                                            </ul>
                                        </div>
                                    </div>
                                    <div class="review-content">
                                        <p>Tuấn Ánh</p>
                                        <p>Đánh giá của Tuấn Anh</p>
                                        <p>Đăng vào 11/6/2018</p>
                                    </div>
                                </div>
                            </div>
                            <div class="review-fieldset">
                                <h2>Nhận xét của bạn</h2>
                                <h3>Chaz Kangeroo Hoodie</h3>
                                <div class="review-field-ratings">
                                    <div class="product-review-table">
                                        <div class="review-field-rating d-flex">
                                            <span>Cốt truyện</span>
                                            <ul class="rating d-flex">
                                                <li class="off"><i class="zmdi zmdi-star"></i></li>
                                                <li class="off"><i class="zmdi zmdi-star"></i></li>
                                                <li class="off"><i class="zmdi zmdi-star"></i></li>
                                                <li class="off"><i class="zmdi zmdi-star"></i></li>
                                                <li class="off"><i class="zmdi zmdi-star"></i></li>
                                            </ul>
                                        </div>
                                        <div class="review-field-rating d-flex">
                                            <span>Giá</span>
                                            <ul class="rating d-flex">
                                                <li class="off"><i class="zmdi zmdi-star"></i></li>
                                                <li class="off"><i class="zmdi zmdi-star"></i></li>
                                                <li class="off"><i class="zmdi zmdi-star"></i></li>
                                                <li class="off"><i class="zmdi zmdi-star"></i></li>
                                                <li class="off"><i class="zmdi zmdi-star"></i></li>
                                            </ul>
                                        </div>
                                        <div class="review-field-rating d-flex">
                                            <span>Nội dung</span>
                                            <ul class="rating d-flex">
                                                <li class="off"><i class="zmdi zmdi-star"></i></li>
                                                <li class="off"><i class="zmdi zmdi-star"></i></li>
                                                <li class="off"><i class="zmdi zmdi-star"></i></li>
                                                <li class="off"><i class="zmdi zmdi-star"></i></li>
                                                <li class="off"><i class="zmdi zmdi-star"></i></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                                <div class="review_form_field">
                                    <div class="input__box">
                                        <span>Tên</span>
                                        <input id="nickname_field" type="text" name="nickname">
                                    </div>
                                    <div class="input__box">
                                        <span>Tóm lược</span>
                                        <input id="summery_field" type="text" name="summery">
                                    </div>
                                    <div class="input__box">
                                        <span>Nhận xét</span>
                                        <textarea name="review"></textarea>
                                    </div>
                                    <div class="review-form-actions">
                                        <button>Gửi đánh giá</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- End Single Tab Content -->
                    </div>
                </div>
                <div class="wn__related__product">
                    <div class="section__title text-center">
                        <h2 class="title__be--2">Sản phẩm khác</h2>
                    </div>
                    <div class="row mt--60">
                        <div class="productcategory__slide--2 arrows_style owl-carousel owl-theme">
                            @foreach (var item in ViewBag.BESTSELL)
                            {
                            <div class="product product__style--3 col-lg-4 col-md-4 col-sm-6 col-12">
                                <div class="product__thumb">
                                    <a class="first__img" href="@Url.Action("SingleProduct","SinglePage" , new { ma = item.Ma })"><img src="@item.Anh" alt="product image"></a>
                                    <a class="second__img animation1" href="@Url.Action("SingleProduct","SinglePage" , new { ma = item.Ma })"><img src="@item.Anh" alt="product image"></a>
                                    <div class="hot__box color--2">
                                        <span class="hot-label">HOT</span>
                                    </div>
                                </div>
                                <div class="product__content content--center">
                                    <h4><a href="@Url.Action("SingleProduct","SinglePage" , new { ma = item.Ma })">@item.Ten</a></h4>
                                    <ul class="prize d-flex">
                                        @{decimal gia1 = (decimal)item.Gia;}
                                        <li>@gia1.ToString("##,#") VND</li>
                                    </ul>
                                    <div class="action">
                                        <div class="actions_inner">
                                            <ul class="add_to_links">
                                                <li><a class="cart" href="@Url.Action("XemGioHang","GioHangs")"><i class="bi bi-shopping-bag4"></i></a></li>
                                                <li><a class="wishlist" href="@Url.Action("ThemGioHang","GioHangs" , new { masp = item.Ma , sl = 1})"><i class="bi bi-shopping-cart-full"></i></a></li>
                                                <li><a class="compare" href="@Url.Action("ThemWishList","wishlist" , new { masp = item.Ma})"><i class="bi bi-heart-beat"></i></a></li>
                                                <li><a title="Quick View" class="quickview modal-view detail-link" href="@Url.Action("SingleProduct","SinglePage" , new { ma = item.Ma })"><i class="bi bi-search"></i></a></li>
                                            </ul>
                                        </div>
                                    </div>
                                    <div class="product__hover--content">
                                        <ul class="rating d-flex">
                                            <li class="on"><i class="fa fa-star-o"></i></li>
                                            <li class="on"><i class="fa fa-star-o"></i></li>
                                            <li class="on"><i class="fa fa-star-o"></i></li>
                                            <li><i class="fa fa-star-o"></i></li>
                                            <li><i class="fa fa-star-o"></i></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-12 md-mt-40 sm-mt-40">
                <div class="shop__sidebar">
                    <aside class="wedget__categories poroduct--cat">
                        <h3 class="wedget__title">Loại sản phẩm</h3>
                        <ul>
                            @foreach (var item in ViewBag.LoaiSP)
                            {

                                <li><a href="@Url.Action("XemLoaiSP","LoaiSP" , new { ma = item.Ma})">@item.Ten <span>(@item.SanPhams.Count)</span></a></li>
                            }
                        </ul>
                    </aside>
                    <aside class="wedget__categories poroduct--tag">
                        <h3 class="wedget__title">Product Tags</h3>
                        <ul>
                            @foreach (var item in ViewBag.LoaiSP)
                            {

                                <li><a href="@Url.Action("XemLoaiSP","LoaiSP" , new { ma = item.Ma})">@item.Ten <span>(@item.SanPhams.Count)</span></a></li>
                            }
                        </ul>
                    </aside>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End main Content -->
<!-- Start Search Popup -->
<div class="box-search-content search_active block-bg close__top">
    <form id="search_mini_form--2" class="minisearch" action="#">
        <div class="field__search">
            <input type="text" placeholder="Search entire store here...">
            <div class="action">
                <a href="#"><i class="zmdi zmdi-search"></i></a>
            </div>
        </div>
    </form>
    <div class="close__wrap">
        <span>close</span>
    </div>
</div>
