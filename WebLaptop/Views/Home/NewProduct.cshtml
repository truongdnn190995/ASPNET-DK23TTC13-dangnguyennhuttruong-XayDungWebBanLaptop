@model IEnumerable<WebLaptop.Models.SanPham>
@using WebLaptop.Models;
@{
    Layout = null;
}
<div class="furniture--4 border--round arrows_style owl-carousel owl-theme row mt--50">
    <!-- Start Single Product -->
    @foreach (var item in Model)
    {
        <div class="product product__style--3">
            <div class="col-lg-3 col-md-4 col-sm-6 col-12">
                <div class="product__thumb">
                    <a class="first__img" href="@Url.Action("SingleProduct","SinglePage" , new { ma = item.Ma })"><img src="@item.Anh" alt="product image"></a>
                    <a class="second__img animation1" href="@Url.Action("SingleProduct","SinglePage" , new { ma = item.Ma })"><img src="@item.Anh" alt="product image"></a>
                    <div class="hot__box">
                        <span class="hot-label">@item.GiamGia</span>
                    </div>
                </div>
                <div class="product__content content--center">
                    <h4><a href="@Url.Action("SingleProduct","SinglePage" , new { ma = item.Ma })">@item.Ten</a></h4>
                    <ul class="prize d-flex">
                        @{decimal gia = (decimal)item.Gia;}
                        <li>@gia.ToString("##,#")</li>
                        <li>@Util.GiaGiam(gia , item.GiamGia)</li>
                    </ul>
                    <div class="action">
                        <div class="actions_inner">
                            <ul class="add_to_links">
                                <li><a class="cart" href="@Url.Action("XemGioHang","GioHangs")"><i class="bi bi-shopping-bag4"></i></a></li>
                                <li><a class="wishlist" href="@Url.Action("ThemWishList","wishlist" , new { masp = item.Ma})"><i class="bi bi-heart-beat"></i></a></li>
                                <li><a class="compare" href="@Url.Action("ThemGioHang","GioHangs" , new { masp = item.Ma , sl = 1})"><i class="bi bi-shopping-cart-full"></i></a></li>
                                <li><a title="Quick View" class="quickview  detail-link" href="@Url.Action("SingleProduct","SinglePage" , new { ma = item.Ma })"><i class="bi bi-search"></i></a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="product__hover--content">
                        <ul class="rating d-flex">
                            <li class="on"><i class="fa fa-star-o"></i></li>
                            <li class="on"><i class="fa fa-star-o"></i></li>
                            <li class="on"><i class="fa fa-star-o"></i></li>
                            <li><i class="fa fa-star-o"></i></li>
                            <li><i class="fa fa-star-o"></i></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- Start Single Product -->
        <!-- Start Single Product -->
    }
</div>
