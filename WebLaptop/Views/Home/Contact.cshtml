@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="ht__bradcaump__area bg-image--6" style="background-image:url('https://truonggiang.vn/wp-content/uploads/2022/09/banner-laptop-sinh-vien-2048x943-1.jpg')">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="bradcaump__inner text-center">
                    <h2 class="bradcaump-title">Liên hệ với chúng tôi</h2>
                    <nav class="bradcaump-content">
                        <a class="breadcrumb_item" href="@Url.Action("Index","Home")">Home</a>
                        <span class="brd-separetor">/</span>
                        <span class="breadcrumb_item active">Liên hệ với chúng tôi</span>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
<section class="wn_contact_area bg--white pt--80 pb--80">
    <div class="google__map pb--80">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d280.43589354179727!2d105.87549954004008!3d20.13671618827721!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31366362ae5db749%3A0xddb2eee36812146e!2zQ-G7rWEgSMOgbmcgxJBp4buHbiBOxrDhu5tjIFbFqSBDw7pj!5e0!3m2!1svi!2s!4v1649386018926!5m2!1svi!2s" width="100%" height="600" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-12">
                <div class="contact-form-wrap">
                    <h2 class="contact__title">Liên lạc với chúng tôi</h2>
                    <p>Nếu như bạn có bất kỳ câu hỏi nào hay liên hệ với chúng tôi quá mẫu đơn bên dưới</p>
                    <form id="contact-form" action="#" method="post">
                        <div class="single-contact-form space-between">
                            <input type="text" name="firstname" placeholder="Tên*">
                            <input type="text" name="lastname" placeholder="Họ*">
                        </div>
                        <div class="single-contact-form space-between">
                            <input type="email" name="email" placeholder="Email*">
                        </div>
                        <div class="single-contact-form message">
                            <textarea name="message" placeholder="Gõ tin nhắn của bạn ở đây..."></textarea>
                        </div>
                        <div class="contact-btn">
                            <button type="submit">Gửi Email</button>
                        </div>
                    </form>
                </div>
                <div class="form-output">
                    <p class="form-messege">
                </div>
            </div>
            <div class="col-lg-4 col-12 md-mt-40 sm-mt-40">
                <div class="wn__address">
                    <h2 class="contact__title">Thông tin của chúng tôl.</h2>
                    <div class="wn__addres__wreapper">
                        <div class="single__address">
                            <i class="icon-location-pin icons"></i>
                            <div class="content">
                                <span>Địa chỉ:</span>
                                <p>@ViewBag.dc</p>
                            </div>
                        </div>

                        <div class="single__address">
                            <i class="icon-phone icons"></i>
                            <div class="content">
                                <span>Số điện thoại:</span>
                                <p>@ViewBag.Sdt </p>
                            </div>
                        </div>

                        <div class="single__address">
                            <i class="icon-envelope icons"></i>
                            <div class="content">
                                <span>Email:</span>
                                <p>@ViewBag.email</p>
                            </div>
                        </div>

                        <div class="single__address">
                            <i class="icon-globe icons"></i>
                            <div class="content">
                                <span>Tên công ty:</span>
                                <p>@ViewBag.ct</p>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

